@model List<MyLoginPage.Models.StudentDetails>
@{
    ViewBag.Title = "ViewSubmissions";
}



<h2>All Student Submitted Details</h2>

<form method="get" action="@Url.Action("ViewSubmissions", "Admin")"style="margin-bottom: 20px;">
    <input type="text" name="searchTerm" placeholder="Search" style="width:300px; padding:5px;" value="@Request.QueryString["searchTerm"]" />
    <input type="submit" value="Search" class="btn-primary" />
    <a href="@Url.Action("ViewSubmissions", "Admin")" class="btn-secondary" style="margin-left: 4px;">
        All
    </a>
</form>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>User ID</th>
                <th>Name</th>
                <th>Branch</th>
                <th>Mobile No</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.ID</td>
                    <td>@student.USERID</td>
                    <td>@student.NAME</td>
                    <td>@student.BRANCH</td>
                    <td>@student.MOBILENO</td>
                    <td>@student.ADDRESS</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No student details found.</p>
}


